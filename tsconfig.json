{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "./",
      "strict": true,
      "strictNullChecks": false, 
      "noImplicitAny": false,
      "lib": ["ES2021.String"]
    },
    "include": ["./src/**/*", "./include/**/*.ts", "server_config.ts", "server.ts"],
    "exclude": ["node_modules", "**/__tests__/*", "**/*.spec.ts"]
  }